<Window x:Class="PhigrosMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Acrylic10"
        ui:TitleBar.Height="36"
        Title="Phigros Media Player" Height="450" Width="800">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarInfo"/>
    </Window.TaskbarItemInfo>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="BtnAdd" Width="90" Margin="0,0,8,0" Click="BtnAdd_Click">添加音乐</Button>
            <Button x:Name="BtnAddZIPPEZ" Width="150" Margin="0,0,8,0" Click="BtnAddZIPPEZ_Click">添加 ZIP 或 PEZ</Button>
            <Button x:Name="BtnSaveList" Width="120" Margin="0,0,8,0" Click="BtnSaveList_Click">保存播放列表</Button>
            <Button x:Name="BtnLoadList" Width="120" Margin="0,0,8,0" Click="BtnLoadList_Click">加载播放列表</Button>
            <Button x:Name="BtnAbout" Width="60" Margin="0,0,8,0" Click="BtnAbout_Click">关于</Button>
        </StackPanel>

        <ListBox x:Name="ListBoxPlaylist" Grid.Row="1" DisplayMemberPath="Title" MouseDoubleClick="ListBoxPlaylist_MouseDoubleClick"
                 PreviewMouseRightButtonDown="ListBoxPlaylist_PreviewMouseRightButtonDown" Background="Transparent">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="删除" Click="MenuDelete_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,8,0,0">
            <Slider x:Name="SliderProgress" Minimum="0" Maximum="1" Value="0" Margin="0,0,0,4"
                    PreviewMouseLeftButtonDown="SliderProgress_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderProgress_PreviewMouseLeftButtonUp"
                    ValueChanged="SliderProgress_ValueChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button x:Name="BtnPrev" Width="80" Margin="0,0,8,0" Click="BtnPrev_Click">上一首</Button>
            <Button x:Name="BtnPlayPause" Width="90" Margin="0,0,8,0" Click="BtnPlayPause_Click">播放</Button>
            <Button x:Name="BtnNext" Width="80" Click="BtnNext_Click">下一首</Button>
        </StackPanel>
        <TextBlock Grid.Row="3" x:Name="TxtNow" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="3" x:Name="TxtTime" VerticalAlignment="Center" HorizontalAlignment="Right"/>

    </Grid>
</Window>