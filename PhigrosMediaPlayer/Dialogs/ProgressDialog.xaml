<ui:ContentDialog x:Class="PhigrosMediaPlayer.Dialogs.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhigrosMediaPlayer"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
                  xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ikw:SimpleStackPanel Spacing="8" VerticalAlignment="Center">
        <TextBlock x:Name="ProgressName" HorizontalAlignment="Center"/>
        <ui:ProgressBar x:Name="Progress"/>
        <TextBlock x:Name="ProgressText" Text="-/-" HorizontalAlignment="Center"/>
    </ikw:SimpleStackPanel>
</ui:ContentDialog>
